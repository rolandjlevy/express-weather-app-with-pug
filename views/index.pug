- let cities = ['Berlin', 'Tokyo', 'Paris', 'London']
doctype(html)
html
  head
    title Weather App
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,600;0,700;0,800;1,400;1,600;1,700&display=swap')  
    style
      include ../public/style.css
    script
      include ../public/script.js

  body
    .container
      header
        h1 Weather in #{city}
        if result
          p #{result}
        each city in cities
          a(href=`/?city=${city}`) #{city}
          span |